<h1>{{PageTitle}}</h1>
<h2>{{PageTitleSpanish}}</h2>

<div id="video-options">
  {{#each Videos}}
    <div class="video-button" id="video-{{@index}}" data-video-source="{{File}}">
      <img src="media/images/{{../MediaFolder}}/{{Image}}">
      <div class="video-prompts">
        <h3>{{Prompt}}</h3>
        <h4>{{SpanishPrompt}}</h4>
      </div>
    </div>
  {{/each}}
</div>

<!-- Video player is hidden initially and shown after a video is selected -->
<div class="hidden">
  <video id="videoPlayer" class="video-js vjs-default-skin" preload="auto" width="1200" height="520">
    <source src="../media/video/{{MediaFolder}}/{{Videos.0.File}}" type='video/mp4'>
  </video>
</div>
